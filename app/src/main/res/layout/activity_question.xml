<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13s"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:layout_gravity="center_vertical" />

        <ProgressBar
            android:id="@+id/progressTimer"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:max="13"
            android:progress="13"
            android:progressTint="@color/button_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Quién dirigió ‘Inception’?"
        android:textColor="@color/text_white"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"/>

    <RadioGroup
        android:id="@+id/rgOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/rbA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A) Christopher Nolan"
            android:textColor="@color/text_white"
            android:buttonTint="@color/button_blue"/>

        <RadioButton
            android:id="@+id/rbB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B) Steven Spielberg"
            android:textColor="@color/text_white"
            android:buttonTint="@color/button_blue"/>

        <RadioButton
            android:id="@+id/rbC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C) Quentin Tarantino"
            android:textColor="@color/text_white"
            android:buttonTint="@color/button_blue"/>

        <RadioButton
            android:id="@+id/rbD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D) Martin Scorsese"
            android:textColor="@color/text_white"
            android:buttonTint="@color/button_blue"/>
    </RadioGroup>

    <!-- TextView para mostrar progreso: Pregunta X/Y -->
    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1/10"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>